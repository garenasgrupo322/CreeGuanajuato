@page
@model CreeGuanajuato.Pages.colonias.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>Colonia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Colonia.id_colonia" />
            <div class="form-group">
                <label asp-for="Colonia.id_municipio" class="control-label"></label>
                <select asp-for="Colonia.id_municipio" class="form-control" asp-items="ViewBag.id_municipio"></select>
                <span asp-validation-for="Colonia.id_municipio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Colonia.nombre_colonia" class="control-label"></label>
                <input asp-for="Colonia.nombre_colonia" class="form-control" />
                <span asp-validation-for="Colonia.nombre_colonia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Colonia.codigo_postal" class="control-label"></label>
                <input asp-for="Colonia.codigo_postal" class="form-control" />
                <span asp-validation-for="Colonia.codigo_postal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Eliminar</h2>

<h3>¿Estás seguro que quieres eliminar el registro?</h3>
<div>
    <h4>Colonia</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Colonia.nombre_colonia)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Colonia.nombre_colonia)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Colonia.codigo_postal)
        </dt>

@page
@model CreeGuanajuato.Pages.Estados.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Estados</h2>

<p>
    <a asp-page="Create">Nuevo registro</a>
</p>

<form asp-page="./Index" method="get">
    <div class="row">
        <div class="col-lg-offset-4 col-md-1">
            <label>Búsqueda</label>
        </div>
        <div class="col-md-4">
            <input type="text" name="busqueda" value="@Model.CurrentFilter" class="form-control" />
        </div>
        <div class="col-md-1">
            <input type="submit" value="Búsqueda" class="btn btn-default" />
        </div>
        <div class="col-md-1">
            <a asp-page="./Index" class="btn btn-default">Limpiar</a>
        </div>
        <div class="col-md-1">
            <a href="#" class="btn btn-default">Excel</a>
        </div>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Estado[0].nombre_estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Estado)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre_estado)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.id_estado">Modificar</a> |
                    <a asp-page="./Details" asp-route-id="@item.id_estado">Detalles</a> |
                    <a asp-page="./Delete" asp-route-id="@item.id_estado">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    var prevDisabled = !Model.Estado.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.Estado.HasNextPage ? "disabled" : "";
}

<a asp-page="./Index"
   asp-route-sortOrder="@Model.CurrentSort"
   asp-route-pageIndex="@(Model.Estado.PageIndex - 1)"
   asp-route-currentFilter="@Model.CurrentFilter"
   class="btn btn-default @prevDisabled">
    Anterior
</a>
<a asp-page="./Index"
   asp-route-sortOrder="@Model.CurrentSort"
   asp-route-pageIndex="@(Model.Estado.PageIndex + 1)"
   asp-route-currentFilter="@Model.CurrentFilter"
   class="btn btn-default @nextDisabled">
    Siguiente
</a>
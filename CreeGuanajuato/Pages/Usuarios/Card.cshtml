@page
@model CardModel
@{
    ViewData["Title"] = "Guardar Tarjeta";
}

<style type="text/css">
    .card {
        height: 420px !important;
        border-color:gray;
        border-width: 2px;
    }

    .header {
        height: 20px;
        background-color: #285B81;
    }

    .body {
        height:377px;
        font-size: large;
        font-weight: bold;
    }

    .footer {
        height: 20px;
        background-color: #285B81;
    }

    .div-separator {
        width: 30px;
        height: 5px;
        background-color: #285B81;
    }

    .img-circle {
        margin:10px;
        height: 120px;
        width: 120px;
        border-radius: 50%;
    }
</style>

<h2>Usuario</h2>

<h4>@ViewData["Title"]</h4>
<hr />
<div class="row" id="tarjeta">
    <div class="col-md-5">
        <div class="card">
            <div class="header"></div>
            <div class="body">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <img src="@Model.CreeGuanajuatoUser.url" class="img-circle"/>
                    </div>
                    <div class="col-md-12 text-center">
                        @Html.DisplayFor(model => model.CreeGuanajuatoUser.nombre)
                        &nbsp;
                        @Html.DisplayFor(model => model.CreeGuanajuatoUser.apellido_paterno)
                        &nbsp;
                        @Html.DisplayFor(model => model.CreeGuanajuatoUser.apellido_materno)
                    </div>
                    <div class="col-md-12 text-center" style="margin:10px;">
                        @Html.DisplayFor(model => model.roles)
                    </div>
                    <div class="col-md-12 text-center">
                        <center>
                            <div class="div-separator">

                            </div>
                        </center>
                    </div>
                    <div class="col-md-12 text-center"  style="margin:20px;">
                        <img src="~/images/logo_color.png" width="120" style="margin-left: 10px;" />
                    </div>
                </div>
            </div>
            <div class="footer"></div>
        </div>
    </div>
    <div class="col-md-5">
        <div class="card">
            <div class="header"></div>
            <div class="body">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <img src="@ViewData["imageQR"]" style="margin-top: 10px;" />
                    </div>
                    <div class="col-md-12 text-center">
                        <img src="~/images/logo_color.png" width="120" style="margin-left: 10px;" />
                    </div>
                </div>
            </div>
            <div class="footer"></div>
        </div>
    </div>
</div>
<div class="form-group">
    <button type="button" class="btn btn-default" onclick="capturaPantalla();">Descargar</button>
</div>

<div>
    <a asp-page="Index">Regresar</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/html2canvas.min.js"></script>
    <script src="~/js/canvas-toBlob.js"></script>
    <script type="text/javascript">
        function capturaPantalla() {
            html2canvas(document.querySelector("#tarjeta")).then(canvas => {
                canvas.toBlob(function(blob) {
                    saveAs(blob, "tarjeta.png");
                });
            });
        }
    </script>
}

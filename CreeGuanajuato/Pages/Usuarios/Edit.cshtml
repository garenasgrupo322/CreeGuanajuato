@page
@model CreeGuanajuato.Pages.Usuarios.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Modificar</h2>

<h4>Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="creeGuanajuatoUser.Id" />
            <div class="form-group">
                <label class="control-label">Rol</label>
                <select asp-for="creeGuanajuatoRole.Id" class="form-control" asp-items="ViewBag.id_rol" required="required"></select>
            </div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="Input.nombre"></label>
                    <input asp-for="Input.nombre" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Input.apellido_paterno"></label>
                    <input asp-for="Input.apellido_paterno" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Input.apellido_materno"></label>
                    <input asp-for="Input.apellido_materno" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@page
@model CreeGuanajuato.Pages.municipios.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>Municipio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Municipio.id_municipio" />
            <div class="form-group">
                <label asp-for="Municipio.id_estado" class="control-label"></label>
                <select asp-for="Municipio.id_estado" class="form-control" asp-items="ViewBag.id_estado"></select>
                <span asp-validation-for="Municipio.id_estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Municipio.nombre_municipio" class="control-label"></label>
                <input asp-for="Municipio.nombre_municipio" class="form-control" />
                <span asp-validation-for="Municipio.nombre_municipio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

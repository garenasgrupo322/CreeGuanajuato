@page
@model CreeGuanajuato.Pages.Necesidades.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Modificar</h2>

<h4>Necesidad</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Necesidad.id_necesidad" />
            <div class="form-group">
                <label asp-for="Necesidad.descripcion" class="control-label"></label>
                <input asp-for="Necesidad.descripcion" class="form-control" />
                <span asp-validation-for="Necesidad.descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@page
@model CreeGuanajuato.Pages.necesidades.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Necesidad[0].descripcion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Necesidad) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.id_necesidad">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.id_necesidad">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.id_necesidad">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@page
@model CreeGuanajuato.Pages.direcciones.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Direccion[0].calle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion[0].numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion[0].Colonia)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Direccion) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.calle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Colonia.codigo_postal)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.id_direccion">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.id_direccion">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.id_direccion">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

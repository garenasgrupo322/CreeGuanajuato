@page
@model CreeGuanajuato.Pages.Legales.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Legal</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="legal.id_legal" />
            <div class="form-group">
                <label asp-for="legal.descripcion" class="control-label"></label>
                <textarea class="form-control" rows="5" id="comment" asp-for="legal.descripcion"></textarea>
                <span asp-validation-for="legal.descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
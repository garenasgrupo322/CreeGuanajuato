@page
@model CreeGuanajuato.Pages.Registros.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@section Style {
    <link rel="stylesheet" href="~/lib/jquery-ui-1.12.1/jquery-ui.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom-combobox.css" asp-append-version="true" />
}

<h2>Registros</h2>

<p>
    <a asp-page="Create">Nuevo registro</a>
</p>

<div id="accordion">
    <h3>Filtros</h3>
    <div>
        <form asp-page="./Index" method="get">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Nombre</label>
                        <input type="text" class="form-control" id="nombre" value="@Model.CurrentFilter"/>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Colonia</label>
                        <select id="id_colonia" name="id_colonia" class="form-control" asp-items="ViewBag.id_colonia"></select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Necesidad</label>
                        <select id="id_necesidad" name="id_necesidad" class="form-control" asp-items="ViewBag.id_necesidad"></select>
                    </div>
                </div>
                <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">Sección</label>
                            <select id="id_seccion" name="id_seccion" class="form-control" asp-items="ViewBag.id_seccion"></select>
                        </div>
                </div>
            </div>
            <div class="row">
                <div class="offset-md-10 col-md-1">
                    <input type="submit" value="Búsqueda" class="btn btn-default" />
                </div>
                <div class="col-md-1">
                    <a asp-page="./Index" class="btn btn-default">Limpiar</a>
                </div>
            </div>
        </form>
    </div>
    <h3>Registros</h3>
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Registro[0].nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Registro[0].apellido_paterno)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Registro[0].apellido_materno)
                    </th>
                    @*<th>
                            @Html.DisplayNameFor(model => model.Registro[0].INE)
                        </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.Registro[0].email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Registro[0].fecha_nacimiento)
                    </th>
                    @*<th>
                            @Html.DisplayNameFor(model => model.Registro[0].numero_hijos)
                        </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.Registro[0].Estado)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Registro[0].Municipio)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Registro[0].Colonia)
                    </th>
                    @*<th>
                            @Html.DisplayNameFor(model => model.Registro[0].Direccion)
                        </th>*@
                    @*<th>
                            @Html.DisplayNameFor(model => model.Registro[0].Escolaridad)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Registro[0].EstadoCivil)
                        </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.Registro[0].Necesidad)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Registro)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.apellido_paterno)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.apellido_materno)
                        </td>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.INE)
                            </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.fecha_nacimiento)
                        </td>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.numero_hijos)
                            </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.Estado.nombre_estado)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Municipio.nombre_municipio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Colonia.nombre_colonia)
                        </td>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.Direccion.id_direccion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Escolaridad.nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EstadoCivil.nombre)
                            </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.Necesidad.descripcion)
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.id_registro">Modificar</a> |
                            <a asp-page="./Details" asp-route-id="@item.id_registro">Detalles</a> |
                            <a asp-page="./Delete" asp-route-id="@item.id_registro">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @{
            var prevDisabled = !Model.Registro.HasPreviousPage ? "disabled" : "";
            var nextDisabled = !Model.Registro.HasNextPage ? "disabled" : "";
        }

        <a asp-page="./Index"
        asp-route-sortOrder="@Model.CurrentSort"
        asp-route-pageIndex="@(Model.Registro.PageIndex - 1)"
        asp-route-currentFilter="@Model.CurrentFilter"
        class="btn btn-default @prevDisabled">
            Anterior
        </a>
        <a asp-page="./Index"
        asp-route-sortOrder="@Model.CurrentSort"
        asp-route-pageIndex="@(Model.Registro.PageIndex + 1)"
        asp-route-currentFilter="@Model.CurrentFilter"
        class="btn btn-default @nextDisabled">
            Siguiente
        </a>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-ui-1.12.1/jquery-ui.min.js" type="text/javascript"></script>
    <script src="~/js/custom-combobox.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(function() {
            function inicializa() {
                $("#id_colonia").append('<option value="0" selected>Seleccione<option>');
                $("#id_colonia").combobox();

                $("#id_necesidad").append('<option value="0" selected>Seleccione<option>');
                $("#id_necesidad").combobox();

                $("#id_seccion").append('<option value="0" selected>Seleccione<option>');
                $("#id_seccion").combobox();

                $( "#accordion" ).accordion({
                    active: 1
                });
            }

            $(document).ready(inicializa);
        })
    </script>
}
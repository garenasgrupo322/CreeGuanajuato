@page
@model CreeGuanajuato.Pages.Registros.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@section Style {
    <link rel="stylesheet" href="~/lib/jquery-ui-1.12.1/jquery-ui.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom-combobox.css" asp-append-version="true" />
}

<h2>Crear</h2>

<h4>Nuevo registro</h4>
<hr />
<div class="row">
    <form method="post">
        <div class="col-lg-offset-1 col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Registro.nombre" class="control-label"></label>
                <input asp-for="Registro.nombre" class="form-control" />
                <span asp-validation-for="Registro.nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Registro.apellido_paterno" class="control-label"></label>
                <input asp-for="Registro.apellido_paterno" class="form-control" />
                <span asp-validation-for="Registro.apellido_paterno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Registro.apellido_materno" class="control-label"></label>
                <input asp-for="Registro.apellido_materno" class="form-control" />
                <span asp-validation-for="Registro.apellido_materno" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Registro.id_estado" class="control-label"></label>
                <select asp-for="Registro.id_estado" class="form-control" asp-items="ViewBag.id_estado"></select>
            </div>
            <div class="form-group">
                <label asp-for="Registro.id_municipio" class="control-label"></label>
                <select asp-for="Registro.id_municipio" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Registro.id_colonia" class="control-label"></label>
                <select asp-for="Registro.id_colonia" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Registro.calle" class="control-label"></label>
                <input asp-for="Registro.calle" class="form-control" />
                <span asp-validation-for="Registro.calle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Registro.numero" class="control-label"></label>
                <input asp-for="Registro.numero" class="form-control" />
                <span asp-validation-for="Registro.numero" class="text-danger"></span>
            </div>
        </div>
        <div class="col-lg-offset-2 col-md-4">
            <fieldset>
                <div class="form-group">
                    <label asp-for="Registro.INE" class="control-label"></label>
                    <input asp-for="Registro.INE" class="form-control" />
                    <span asp-validation-for="Registro.INE" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Registro.email" class="control-label"></label>
                    <input asp-for="Registro.email" class="form-control" />
                    <span asp-validation-for="Registro.email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Registro.fecha_nacimiento" class="control-label"></label>
                    <input asp-for="Registro.fecha_nacimiento" class="form-control" />
                    <span asp-validation-for="Registro.fecha_nacimiento" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Registro.numero_hijos" class="control-label"></label>
                    <input asp-for="Registro.numero_hijos" class="form-control" />
                    <span asp-validation-for="Registro.numero_hijos" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Registro.id_estado_civil" class="control-label"></label>
                    <select asp-for="Registro.id_estado_civil" class="form-control" asp-items="ViewBag.id_estado_civil"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Registro.id_escolaridad" class="control-label"></label>
                    <select asp-for="Registro.id_escolaridad" class="form-control" asp-items="ViewBag.id_escolaridad"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Registro.id_necesidad" class="control-label"></label>
                    <select asp-for="Registro.id_necesidad" class="form-control" asp-items="ViewBag.id_necesidad"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Registro.id_seccion" class="control-label"></label>
                    <select asp-for="Registro.id_seccion" class="form-control" asp-items="ViewBag.id_seccion"></select>
                </div>
                <div class="form-group text-right">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </div>
            </fieldset>
        </div>
    </form>
</div>

<div>
    <a asp-page="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/lib/jquery-ui-1.12.1/jquery-ui.min.js" type="text/javascript"></script> 
    <script src="~/js/custom-combobox.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(function() {
            function cargaMunicipios(id_estado) {
                $.ajax({
                    method: "GET",
                    url: "../Api/Municipios",
                    data: { id_estado : id_estado },
                    dataType: "json",
                    success: function(result) {

                        $('#Registro_id_municipio')
                            .find('option')
                            .remove()
                            .end()
                            .append('<option value="0">Seleccione</option>')
                            .val('0')

                        $.each(result, function(i, item) {
                            $("#Registro_id_municipio").append($('<option></option>').attr('value', item.id_municipio).text(item.nombre_municipio));
                        })
                    }
                });
            }

            function cargaColonia(id_municipio) {
                $.ajax({
                    method: "GET",
                    url: "../Api/Colonias",
                    data: { id_municipio : id_municipio },
                    dataType: "json",
                    success: function(result) {

                        $('#Registro_id_colonia')
                            .find('option')
                            .remove()
                            .end()
                            .append('<option value="0">Seleccione</option>')
                            .val('0')

                        $.each(result, function(i, item) {
                            $("#Registro_id_colonia").append($('<option></option>').attr('value', item.id_colonia).text(item.nombre_colonia));
                        })
                    }
                });
            }


            function inicializa() {
                $("#Registro_id_estado").append('<option value="0" selected>Seleccione<option>');
                $("#Registro_id_estado").combobox({ 
                    select: function (event, ui) { 
                        cargaMunicipios(this.value);
                    } 
                });

                $("#Registro_id_municipio").append('<option value="0" selected>Seleccione<option>');
                $("#Registro_id_municipio").combobox({ 
                    select: function (event, ui) { 
                        cargaColonia(this.value);
                    } 
                });

                $("#Registro_id_colonia").append('<option value="0" selected>Seleccione<option>');
                $("#Registro_id_colonia").combobox({ 
                    select: function (event, ui) { 
                        alert(this.value);
                    } 
                });

                $("#Registro_id_estado_civil").append('<option value="0" selected>Seleccione<option>');
                $("#Registro_id_estado_civil").combobox({ 
                    select: function (event, ui) { 
                        alert(this.value);
                    } 
                });

                $("#Registro_id_escolaridad").append('<option value="0" selected>Seleccione<option>');
                $("#Registro_id_escolaridad").combobox({ 
                    select: function (event, ui) { 
                        alert(this.value);
                    } 
                });

                $("#Registro_id_necesidad").append('<option value="0" selected>Seleccione<option>');
                $("#Registro_id_necesidad").combobox({ 
                    select: function (event, ui) { 
                        alert(this.value);
                    } 
                });

                $("#Registro_id_seccion").append('<option value="0" selected>Seleccione<option>');
                $("#Registro_id_seccion").combobox({ 
                    select: function (event, ui) { 
                        alert(this.value);
                    } 
                });

                $( "#accordion" ).accordion({
                    active: 1
                });
            }

            $(document).ready(inicializa);
        })
    </script>
}